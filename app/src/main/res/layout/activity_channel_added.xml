<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:checkView_strokeColor="@color/green"
        app:checkView_strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Channel Added"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/check"
        app:layout_constraintRight_toRightOf="@id/check"
        app:layout_constraintTop_toBottomOf="@id/check" />

</androidx.constraintlayout.widget.ConstraintLayout>

